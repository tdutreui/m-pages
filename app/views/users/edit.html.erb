<div class="page-header">
    <h1>My profile</h1>
</div>

<%= form_for @user do |f| %>
    <%= render 'shared/errors', object: @user %>

    <div class="form-group">
	<%= f.label :email %>
	<%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-control' %>
    </div>

    <%= f.submit 'Update',class: 'btn btn-primary btn-lg' %>
<% end %>
